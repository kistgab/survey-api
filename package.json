    "@types/node": "^20.10.6",
    "@types/supertest": "^6.0.2",
    "@types/validator": "^13.11.8",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^3.6.1",
